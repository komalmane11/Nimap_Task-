@model ProductModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
    <a href="/Product/Create" class="btn btn-primary">Create</a>
  
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">CategoryId</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GetProduct)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.CategoryId</td>

                    <td><a href="/Product/Edit?id=@item.Id" class="btn btn-primary">Update</a></td>
                    <td><a href="/Product/Delete?id=@item.Id" class="btn btn-primary">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a href="/Product/GetProduct" class="btn btn-primary"></a>
    <table cellpadding="0" cellspacing="0">
        <tr>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <td>
                    @if (i != Model.CurrentPageIndex)
                    {
                       
                        <a href="javascript:PagerClick(@i);">@i</a>
                    }
                    else
                    {
                       
                        <span>@i</span>
                    }
                </td>
            }
        </tr>
    </table>

    <script type="text/javascript">
        function PagerClick(currentPageIndex) {
         
            const url = new URL(window.location.href); 
            url.searchParams.set('currentPageIndex', currentPageIndex); 
            window.location.href = url.toString(); 
        }
    </script>
</div>



   
